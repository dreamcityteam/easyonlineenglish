{
  "functions": {
    "api/*": {
      "maxDuration": 300
    }
  },
  "rewrites": [
    { "source": "/(en|es|fr)/(.*)", "destination": "/$2" },
    { "source": "/(en|es|fr)", "destination": "/" },
    { "source": "/api/v1/(.*)", "destination": "/api" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|svg|css|js|ico|webp|json|txt))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ]
}
